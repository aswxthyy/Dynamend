<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TxtBox" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="Height" Value="20"></Setter>
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="Background" Value="#F6FCDF"></Setter>
        <Setter Property="Foreground" Value="#31511e"></Setter>
        <Setter Property="FontSize" Value="{StaticResource FontSm}"></Setter>
        <Setter Property="FontWeight" Value="Normal"></Setter>
        <Setter Property="FontFamily" Value="Cascadia Mono"></Setter>
    </Style>

</ResourceDictionary>