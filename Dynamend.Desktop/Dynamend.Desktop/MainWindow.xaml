<Window x:Class="Dynamend.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamend.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="Options">
                <MenuItem Header="Search"></MenuItem>
                <MenuItem Header="Add User"></MenuItem>
            </MenuItem>
        </Menu>
        <Button Click="Button_Click">New Customer</Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Width="500"></TextBox>
            <Button>Search</Button>
        </StackPanel>

        <DataGrid AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vehicle Number"></DataGridTextColumn>
                <DataGridTextColumn Header="Customer Name"></DataGridTextColumn>
                <DataGridTextColumn Header="Vehicle Model"></DataGridTextColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label>Custom content</Label>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
