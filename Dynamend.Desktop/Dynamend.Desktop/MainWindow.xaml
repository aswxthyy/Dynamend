<Window x:Class="Dynamend.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamend.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#272727" Grid.Column="1">
            <Button Style="{StaticResource ButtonBase}" >Click Me</Button>
            <TextBox Style="{StaticResource TxtBox}"></TextBox>
            <RadioButton Style="{StaticResource Rbutton}">Sample</RadioButton>
        </StackPanel>

        <StackPanel Background="#302923">
            <TextBlock Text="Dynamend" FontSize="{StaticResource FontXl}"/>
            <Label Style="{StaticResource H1}" Content="Sample Label"/>
            <TextBlock Style="{StaticResource H2}" Text="SubHeading"/>
        </StackPanel>
    </Grid>
</Window>
