<UserControl x:Class="Dynamend.Desktop.Controls.ReportStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dynamend.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="Black">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Text}" Style="{StaticResource H3}" Margin="10"></TextBlock>
            <RadioButton  Style="{StaticResource Rbutton}" Content="Passed" IsChecked="{Binding SelectedOption}"  Tag="Passed" Click="RadioButton_Click"></RadioButton>
            <RadioButton  Style="{StaticResource Rbutton}" Content="Repaired" IsChecked="{Binding SelectedOption}" Tag="Repaired" Click="RadioButton_Click"></RadioButton>
            <RadioButton  Style="{StaticResource Rbutton}" Content="Replaced" IsChecked="{Binding SelectedOption}"  Tag="Replaced" Click="RadioButton_Click"></RadioButton>
        </StackPanel>
    </StackPanel>

</UserControl>
