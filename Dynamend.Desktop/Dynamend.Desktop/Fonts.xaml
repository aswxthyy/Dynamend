<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="FontSm">14</sys:Double>
    <sys:Double x:Key="FontMd">18</sys:Double>
    <sys:Double x:Key="FontLg">24</sys:Double>
    <sys:Double x:Key="FontXl">30</sys:Double>

    <Style x:Key="H1" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource FontXl}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Cascadia Mono"/>
        <Setter Property="Foreground" Value="#f6fcdf"/>
    </Style>

    <Style x:Key="H2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontLg}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="Cascadia Mono"/>
        <Setter Property="Foreground" Value="#859f3d"/>
    </Style>

</ResourceDictionary>